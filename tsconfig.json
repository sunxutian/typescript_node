{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "jsx": "react",
        "outDir": "dist",
        "lib": [
            "es2015"
        ],
        "typeRoots": [
            "node_modules/@types",
            "./src/types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}